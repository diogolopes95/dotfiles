#!/bin/sh
set -eu

if ! [ $# -eq 1 ]; then
  echo "Usage:"
  echo "sbtnew [project name]"
else
  directoryName=$1
  mkdir -p ${directoryName}/src/{main,test}/{java,resources,scala}
  mkdir ${directoryName}/lib ${directoryName}/project ${directoryName}/target

  # build.sbt
  cat << EOF > ${directoryName}/build.sbt
name := "$directoryName"
version := "1.0"
scalaVersion := "2.11.8"
EOF

  # .gitignore
  cat << EOF > ${directoryName}/.gitignore
bin/
project/
target/
.cache
.classpath
.project
.settings
EOF

  # README.md
  touch ${directoryName}/README.md
fi

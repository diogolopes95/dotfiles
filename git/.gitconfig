[user]
	email = _@gmcabrita.com
	name = Gon√ßalo Cabrita
[credential]
	helper = cache --timeout 3600
[core]
	editor = nvim +2
	fscache = true
[color]
	ui = true
[gist]
	private = yes
[diff]
	tool = nvim
[difftool "nvim"]
	cmd = "nvim -d" "$LOCAL" "$REMOTE"
[difftool]
	prompt = false
[alias]
	initial = commit -am 'initial commit'
	s = status -s
	dif = difftool
	d = diff
	out = checkout -b
	l = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
[push]
	default = simple
[pull]
	rebase = true
[commit]
	template = ~/.git_commit_msg
